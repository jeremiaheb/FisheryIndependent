<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
      <h3>Users</h3>
      <div class="column">
        <table class="table table-striped table-condensed table-bordered" id="captainsTable">

          <thead>
            <tr>
              <th>Name</th>
              <th>Role / MangerLink / submit</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <%= render user %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
