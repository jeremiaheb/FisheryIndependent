<div class="container managerContainer">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
      <p id="notice"><%= notice %></p>

      <h1>Managers</h1>

      <table class="table table-striped table-condensed table-bordered" id="captainsTable">

        <thead>
          <tr>
            <th>Name</th>
            <th>Agency</th>
            <th colspan="1"></th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @managers.each do |manager| %>
            <tr>
              <td><%= manager.name %></td>
              <td><%= manager.agency %></td>
              <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
              <td><%= link_to 'Remove', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Manager', new_manager_path %>
  </div>
</div>
