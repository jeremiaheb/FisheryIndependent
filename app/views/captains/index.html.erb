<div class="container captainContainer">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
      <p id="notice"><%= notice %></p>

      <h1>Captains</h1>

      <table class="table table-striped table-condensed table-bordered" id="captainsTable">

        <thead>
          <tr>
            <th>Name</th>
            <th colspan="1"></th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @captains.each do |captain| %>
            <tr>
              <td><%= captain.name %></td>
              <td><%= link_to 'Edit', edit_captain_path(captain) %></td>
              <td><%= link_to 'Remove', captain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'Add Captain', new_captain_path %>
  </div>
</div>
