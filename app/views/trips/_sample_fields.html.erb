<div class="nested-fields">
  
      <div class="row">
        
        <div class="form-group col-md-1">
          <%= f.label :grid_number, "Grid Number", class: "col-md-1 control-label" %>
          <%= f.text_field :grid_number, class: "form-control" %>
        </div>

        <div class="form-group col-md-1">
          <%= f.label :arrival_time, "Arrival Time", class: "col-md-1 control-label" %>
          <%= f.time_field :arrival_time, class: "form-control" %>
        </div>

        <div class="form-group col-md-1">
          <%= f.label :wind_speed, "Wind Speed", class: "col-md-1 control-label" %>
          <%= f.text_field :wind_speed, class: "form-control" %>
        </div>

        <div class="form-group col-md-1">
          <%= f.label :wave_height, "Wave Height", class: "col-md-1 control-label" %>
          <%= f.text_field :wave_height, class: "form-control" %>
        </div>

        <div class="form-group col-md-1">
          <%= f.label :current_speed, "Current Speed", class: "col-md-1 control-label" %>
          <%= f.text_field :current_speed, class: "form-control" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :sample_notes, "Trip Notes", class: "col-md-1 control-label" %>
          <%= f.text_area :sample_notes, class: "form-control" %>
        </div>
      </div>
   
      <div>
        <p><strong>Drops:</strong></p>
        
        <div id="drops">
          <%= f.fields_for :drops do |builder| %>
            <%= render 'drop_fields', f: builder %>
          <% end %>
          <div class="links">
            <%= link_to_add_association "Add Drop",f,:drops %>
          </div>
        </div>
      </div>
  
      <div>
        <p><strong>Catches:</strong></p>
        
        <div id="catches">
          <%= f.fields_for :catches do |builder| %>
            <%= render 'catch_fields', f: builder %>
          <% end %>
          <div class="links">
            <%= link_to_add_association "Add Catch",f,:catches %>
          </div>
        </div>
      </div>

  <%= link_to_remove_association "remove sample", f %>

</div>
